<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thrd"
    android:background="@drawable/newday">

    <TextView
        android:id="@+id/no"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="536dp"
        android:accessibilityLiveRegion="polite"
        android:fontFamily="@font/titillium_web_light"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.693" />

    <TextView
        android:id="@+id/about"
        android:layout_width="169dp"
        android:layout_height="71dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/titillium_web_light"
        android:gravity="top"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dp"
        android:layout_width="309dp"
        android:layout_height="363dp"
        android:layout_marginBottom="28dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/dno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bb"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="660dp"
        android:background="#DF0600"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="#DF0600"
        app:cornerRadius="5sp"
        app:icon="@drawable/ar2"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dno"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titillium_web_light"
        android:gravity="top"
        android:text="DRIVER DETAILS"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dno"
        android:layout_width="111dp"
        android:layout_height="76dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>